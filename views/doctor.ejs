
<!DOCTYPE html>
<html>
  <head>
    <title>Covid2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <a class="navbar-brand" href="/">Trang chủ</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-white" href="/doctor">Bác sĩ</a>
          </li>
        </ul>
      </div>  
  </nav>



    <form  action="/doctor-add" method="POST" style="width: 400px;" >
      <h1 class="container">Cập nhật Bác sĩ</h1>
      <div class="form-group container">
        <label for="Donvilaymau">Đơn vị lấy mẫu:</label>
        <input type="text" class="form-control" id="Donvilaymau" name = "Donvilaymau">
      </div>
      <div class="form-group container" >
        <label for="Lanhdaodonvi">lãnh đạo đơn vị:</label>
        <input type="text" class="form-control" id="Lanhdaodonvi" name = "Lanhdaodonvi">
      </div>
      <div class="form-group container" >
        <label for="Bacsixetnghiem">Bác sĩ xét nghiệm:</label>
        <input type="text" class="form-control" id="Bacsixetnghiem" name = "Bacsixetnghiem">
      </div>
      <div class="form-group container">
          <button type="submit" class="btn btn-primary ">Thêm mới</button>
      </div>
  
  </form>
    <h1> Danh sách Bác sĩ</h1>
    
  <section class="table-wapper">
    <table class=" table mt-4 ">
      <tr>
        <th>STT</th>
        <th>Đơn vị lấy mẫu</th>
        <th>lãnh đạo đơn vị</th>
        <th>Bác sĩ xét nghiệm</th>
        <th>Tuỳ chọn</th>
      </tr>
      <% var stt=1;

      doctor.forEach(item=> { %>
        <tr class="tr-hover">
          <td class="align-middle">
            <%= stt++ %>
          </td>
          <td class="align-middle">
            <%= item.Donvilaymau %>
          </td>
          <td class="align-middle">
            <%= item.Lanhdaodonvi %>
          </td>
          <td class="align-middle">
            <%= item.Bacsixetnghiem %>
          </td>

          <td class="align-middle">
            <a class="btn btn-primary" href="/doctor-update/<%= item.Donvilaymau %> ">Sửa</a>
            <a class="btn btn-danger" href="/doctor-delete/<%= item.Donvilaymau %> ">xoá</a>
          </td>
        </tr>
        <% }); %>
    </table>
  </section>
  </body>
</html>



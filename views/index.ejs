    <form  action="/patient-add" method="POST" style="width: 400px;" >
      <h1 class="container">Khai báo thông tin bệnh nhân</h1>
      <div class="form-group container">
        <label for="CMND">Số CMND:</label>
        <input type="text" class="form-control" id="CMND" name = "CMND" required>
      </div>
      <div class="form-group container" >
        <label for="hoten">Họ tên:</label>
        <input type="text" class="form-control" id="hoten" name = "hoten">
      </div>
      <div class="form-group container">
        <label for="ngaysinh">Ngày sinh:</label>
        <input type="date" class="form-control" id="ngaysinh" name = "ngaysinh" >
      </div>
      <div class="form-group container" name="gioitinh">Giới tính :  
        <label class="radio-inline mr-4 ml-4"><input type="radio"  name="gioitinh" value="Nam" >Nam</label>
        <label class="radio-inline "><input type="radio"  name="gioitinh" value="Nữ">Nữ</label>
      </div>
      <div class="form-group container">
        <label for="diachi">Địa chỉ:</label>
        <input type="text" class="form-control" id="diachi" name = "diachi">
      </div>
      <div class="form-group container">
        <label for="sdt">SĐT:</label>
        <input type="text" class="form-control" id="sdt" name = "sdt">
      </div>
      <div class="form-group container">
          <button type="submit" class="btn btn-primary ">Thêm mới</button>
      </div>
  
  </form>
    <h1> Danh sách bệnh nhân</h1>
    
  <section class="table-wapper">
    <table class=" table mt-4 ">
      <tr>
        <th>STT</th>
        <th>Số CMND</th>
        <th>Họ tên</th>
        <th>Ngày sinh</th>
        <th>Giới tính</th>
        <th>Địa chỉ</th>
        <th>Sdt</th>
        <th>Tuỳ chọn</th>
      </tr>
      <% var stt=1;

      patient.forEach(item=> { %>
        <tr class="tr-hover">
          <td class="align-middle">
            <%= stt++ %>
          </td>
          <td class="align-middle">
            <%= item.CMND %>
          </td>
          <td class="align-middle">
            <%= item.Hovaten %>
          </td>
          <td class="align-middle"  id="datetime" >
           <% let date = new Date(item.Ngaythangnamsinh).toLocaleDateString();%>
            
            <%= date %>
          </td>
          <td class="align-middle" >
            <%= item.Gioitinh %>
          </td>
          <td class="align-middle">
            <%= item.Diachi %>
          </td>
          <td class="align-middle">
            <%= item.SDT %>
          </td>

          <td class="align-middle">
            <a class="btn btn-primary" href="/patient-update/<%= item.CMND %> ">Sửa</a>
            <a class="btn btn-danger" href="/patient-delete/<%= item.CMND %> ">xoá</a>
          </td>
        </tr>
        <% }); %>
    </table>
  </section>
  </body>
</html>


